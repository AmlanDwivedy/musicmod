<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="Theme" parent="@style/Theme.Sherlock">
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowShowWallpaper">true</item>
		<item name="abBackground">@drawable/action_bar_background</item>
	</style>

	<style name="Theme.MusicBrowser" parent="@style/Theme">
		<item name="android:windowBackground">@drawable/default_background</item>
		<item name="abCustomNavigationLayout">@layout/actionbar_view</item>
		<item name="abDisplayOptions">showCustom</item>
		<item name="vpiCirclePageIndicatorStyle">@style/Widget.CirclePageIndicator</item>
		<item name="vpiTitlePageIndicatorStyle">@style/Widget.TitlePageIndicator</item>
		<item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
		<item name="vpiTabTextStyle">@style/Widget.TabPageIndicator.Text</item>
	</style>

	<style name="Theme.MusicPlayback" parent="@style/Theme">
		<item name="android:windowBackground">@drawable/music_playback_background</item>
		<item name="abDisplayOptions">showHome|homeAsUp|showTitle</item>
	</style>

</resources>