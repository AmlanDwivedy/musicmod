<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:baselineAligned="false"
	android:orientation="vertical">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<FrameLayout
				android:layout_width="@dimen/album_art_width"
				android:layout_height="@dimen/album_art_height"
				android:layout_gravity="top|center_horizontal"
				android:gravity="center_horizontal">

				<ImageButton
					android:id="@+id/curplaylist"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:adjustViewBounds="true"
					android:background="@drawable/ic_mp_albumart_border"
					android:src="@drawable/ic_mp_albumart_empty"/>

				<ImageView
					android:id="@+id/album"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:adjustViewBounds="true"
					android:background="@drawable/ic_mp_albumart_placeholder"
					android:src="@drawable/ic_mp_albumart_unknown"/>

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:adjustViewBounds="true"
					android:background="@drawable/ic_mp_albumart_mask"
					android:src="@drawable/ic_mp_albumart_empty"/>
			</FrameLayout>

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="bottom">

				<include layout="@layout/visualizer_view"/>

				<include layout="@layout/info_view"/>

				<include layout="@layout/lyrics_view"/>
			</FrameLayout>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<include layout="@layout/volume_slider"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<include layout="@layout/music_playback_progress"/>
		</LinearLayout>
	</FrameLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
		android:gravity="bottom">

		<include layout="@layout/music_playback_control"/>
	</LinearLayout>

</LinearLayout>